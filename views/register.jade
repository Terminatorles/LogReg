extends layout

  block content
  h2 page-header Register
  p Please Register using the form below
    if errors
        each error, i in errors
          div.alert.alert-danger #{error.msg}
  form(method='post', action='users/register', enctype='multipart/form-data')
  .form-group
  label name
  input.form-control(name='name', type='text',
  placeholder='Enter Name')
  .form-group
  label email
  input.form-control(name='email', type=text,
  placeholder='Enter Email')
  .form-group
  label username
  input.form-control(name='username', type='text',
  placeholder='Enter username')
  .form-group
  label password
  input.form-control(name='password', type='password',
  placeholder='Enter password')
  .form-group
  label confirm password
  input.form-control(name='password', type='password',
  placeholder='Confirm Password')
  .form-group
  label Profile Image
  input.form-control(name='profileImage', type='file')
 input.btn.btn-primary(type='submit', name ='submit', value='Register')
